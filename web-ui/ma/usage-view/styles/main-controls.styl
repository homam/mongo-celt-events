@import 'nib'

#main-controls
	.controls
		display: flex
		flex-wrap: wrap
		& > *
			flex-grow: 1

		h5 
			text-align: left
		.controls
			display: flex
			flex-wrap: wrap
			& > div
				flex-grow: 0
				padding-right: 0.5em

#main-controls-sources
	span
		cursor: pointer
		color: #0099ff
		font-size: 12px
		border-bottom: 1px solid
	div 
		overflow: auto
		height: 240px
		width: 500px
		margin-bottom: 10px
		margin-top: 4px
		border: 1px solid rgba(0,0,0,0.2)
	label
		display:block
		font-size: 12px

body
	font-family: Menlo, monospace

tbody 
	th
		text-align:left
		padding-right: 0.2em
		white-space: nowrap
	td
		padding: 0.2em
		min-width: 46px
	tr:nth-child(2n-1)
		background-color: #deefff

thead
	font-weight: bold
 